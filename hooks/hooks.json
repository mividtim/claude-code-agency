{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "echo '⚠️ Context was compacted. Run /agency:boot to restore continuity.'"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/precompact-backup.sh\"",
            "timeout": 30,
            "async": true
          }
        ]
      }
    ]
  }
}
